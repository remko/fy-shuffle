env:
  node: true

rules:
  quotes: [2, "single", "avoid-escape"]
  indent: [2, "tab", {indentSwitchCase: true}]
  brace-style: [2, "stroustrup", { "allowSingleLine": true }]
  consistent-this: [2, "self"]
  new-cap: [2, {"capIsNew": false}]
  radix: 2
  no-throw-literal: 2

  no-extra-parens: 2
  no-trailing-spaces: 0
  space-infix-ops: 0
  space-unary-ops: 0
  comma-spacing: 0
